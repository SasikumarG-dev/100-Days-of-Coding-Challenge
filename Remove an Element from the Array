package removeelement;
public class RemoveElement {
    public static void main(String[] args) {
        int arr[]={3,2,2,2};
        int val=3,j=0;
        for(int i=0;i<arr.length;i++){
            if(arr[i]!=val){
                arr[j++]=arr[i];
            }
        }
        for(int i=0;i<j;i++)
            System.out.println(arr[i]);
    }
    
}

OUTPUT:
2
2
2
