package maxnumofconsecutiveones;
public class MaxNumOfConsecutiveOneS {
    public static void main(String[] args) {
        int arr[]={1,1,0,0,1,1,1,0};
        int count=0,max=0;
        for(int n:arr){
            if(n==1){
                count++;
                if(count>max)
                    max=count; 
            }
            else
                count=0;
        }
        System.out.println(max);
    }
}

